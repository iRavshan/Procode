@model ContentViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="page-content bg-white">
    <div class="page-banner ovbl-dark" style="background: url(/assets/images/bg.png); ">
        <div class="container">
            <div class="page-banner-entry">
                <h1 class="text-white">@Model.BannerTitle</h1>
            </div>
        </div>
    </div>
    <div class="content-block">
        <div class="section-area section-bg section-sp1">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-xl-12">
                        <div class="blog-lg">
                            <div class="action-box blog-lg">
                                <iframe width="100%" height="500px" src="@($"https://www.youtube.com/embed/{Model.Content.YoutubeVideoId}")" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                            <div class="info-bx">
                                <ul class="media-post">
                                    <li><i class="fa fa-user-o mr-2"></i>@($"{Model.Content.AuthorFirstname} {Model.Content.AuthorLastname}")</li>
                                </ul>
                                <h5 class="post-title">@Model.Content.Name</h5>
                                <p>@Model.Content.ShortDescription</p>
                                <h6 class="mb-3 mt-5">Ijtimoiy tarmoqlarda ulashing: </h6>
                                <ul class="list-inline contact-social-bx">
                                    <li><a href="#" class="btn outline radius-xl mr-1"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="#" class="btn outline radius-xl mr-1"><i class="fa fa-paper-plane"></i></a></li>
                                    <li><a href="#" class="btn outline radius-xl mr-1"><i class="fab fa-instagram"></i></a></li>
                                    <li><a href="#" class="btn outline radius-xl"><i class="fab fa-twitch"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-4 col-xl-4">
                        <aside class="side-bar" style="margin-left: 30px;">
                            <div class="widget widget-root">
                                <h6 class="widget-title">Qidirish</h6>
                                <div class="search-bx style-1">
                                    <form asp-controller="home" asp-action="blog" method="post">
                                        <div class="input-group">
                                            <input asp-for="Search" class="form-control" placeholder="Kalit so'zlarni kiriting..." type="text">
                                            <span class="input-group-btn">
                                                <button type="submit" class="fa fa-search text-primary"></button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="widget recent-posts-entry widget-root">
                                <h6 class="widget-title">Eng so'nggilar</h6>
                                <div class="widget-post-bx">
                                    @{
                                        foreach (var content in Model.LastContents)
                                        {
                                            <div class="widget-post clearfix">
                                                <div class="ttr-post-media">
                                                    <img src="@($"https://ytimg.googleusercontent.com/vi/{content.YoutubeVideoId}/maxresdefault.jpg")" width="200" height="143" alt="">
                                                </div>
                                                <div class="ttr-post-info">
                                                    <div class="ttr-post-header">
                                                        <h6 class="post-title"><a asp-controller="home" asp-action="content" asp-route-Id="@content.Id">@content.Name</a></h6>
                                                    </div>
                                                    <ul class="media-post">
                                                        <li> <button class="btn-tag-font"><i class="fa fa-user mr-2"></i>@($"{content.AuthorFirstname.Substring(0, 1)}. {content.AuthorLastname}")</button></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        }
                                    }

                                </div>
                            </div>
                            <div class="widget widget-newslatter widget-root">
                                <h6 class="widget-title">Yangiliklar</h6>
                                <div class="news-box">
                                    <p>Mahorat darslarini tashkil etish bo'yicha takliflarni bizga yozib qoldiring.</p>
                                </div>
                            </div>
                            <div class="widget widget_tag_cloud widget-root">
                                <h6 class="widget-title">Teglar</h6>
                                <div class="tagcloud">
                                    <a asp-controller="home" asp-action="blog" asp-route-t="design">Design</a>
                                    <a href="#">User interface</a>
                                </div>
                            </div>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section styles{
    <link rel="stylesheet" type="text/css" href="/assets/css/assets.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/typography.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/shortcodes/shortcodes.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
    <link class="skin" rel="stylesheet" type="text/css" href="/assets/css/color/color-1.css">
}

@section scripts{
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/vendors/bootstrap/js/popper.min.js"></script>
    <script src="/assets/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/vendors/bootstrap-select/bootstrap-select.min.js"></script>
    <script src="/assets/vendors/bootstrap-touchspin/jquery.bootstrap-touchspin.js"></script>
    <script src="/assets/vendors/magnific-popup/magnific-popup.js"></script>
    <script src="/assets/vendors/counter/waypoints-min.js"></script>
    <script src="/assets/vendors/counter/counterup.min.js"></script>
    <script src="/assets/vendors/imagesloaded/imagesloaded.js"></script>
    <script src="/assets/vendors/masonry/masonry.js"></script>
    <script src="/assets/vendors/masonry/filter.js"></script>
    <script src="/assets/vendors/owl-carousel/owl.carousel.js"></script>
    <script src="/assets/js/functions.js"></script>
}
