@model Post
@{
    ViewData["Title"] = "Yangi post";
}

<div class="account-login">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-12">
                <form asp-controller="home" asp-action="newpost" class="card login-form inner-content" method="post">
                    <div class="card-body">
                        <div class="title">
                            <h3>Yangi post</h3>
                        </div>
                        <div class="input-head">
                            <label class="input-label" asp-for="Title"></label>
                            <div class="form-group input-group">
                                <input class="form-control" type="text" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <label class="input-label" asp-for="ShortDescription"></label>
                            <div class="form-group input-group">
                                <input class="form-control" type="text" asp-for="ShortDescription">
                                <span asp-validation-for="ShortDescription"></span>
                            </div>
                            <label class="input-label" asp-for="Tags"></label>
                            <div class="form-group input-group">
                                <input class="form-control" type="text" asp-for="Tags">
                                <span asp-validation-for="Tags"></span>
                            </div>
                            <label class="input-label" asp-for="Text"></label>
                            <textarea id="default-editor" asp-for="Text"></textarea>
                            <span asp-validation-for="Text"></span>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">Yaratish</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

