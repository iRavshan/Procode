@model LoginViewModel
@{
    ViewData["Title"] = "Hisobga kirish";
}

<div class="account-login">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <form class="card login-form inner-content" asp-controller="account" asp-action="login" method="post">
                    <div class="card-body">
                        <div class="title">
                            <h3>Hisobga kirish</h3>
                            <p>Yaratilgan hisobingizni faollashtiring.</p>
                        </div>
                        <div class="input-head">
                            <div class="form-group input-group">
                                <input asp-for="Email" class="form-control" type="text" placeholder="Email manzil">
                            </div>
                            <div class="form-group input-group">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Parol">
                            </div>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">Kirish</button>
                            <a class="btn alt" asp-controller="account" asp-action="register">Hisob yaratish</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
